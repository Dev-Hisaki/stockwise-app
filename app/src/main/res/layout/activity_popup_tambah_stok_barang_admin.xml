<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".Popup_Tambah_StokBarang_Admin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:text="Tambah Stok"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="27dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namaBarangTambahStokTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="Samsung Galaksi SSS 6/128"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/stokBarangTambahStokTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kurangAngkaTambahStokButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_button_gray"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="70dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/ubahStokTambahStokTextView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="start">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tambahAngkaTambahStokButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/shape_button_gray"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmTambahStokTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shape_button"
            android:text="OK"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>