<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray_background">
    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coca Cola"
        android:textSize="20dp"
        android:layout_margin="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginHorizontal="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/productIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Produk\t\t\t\t\t\t\t\t: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/productIdValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Keluar : "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/dateValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Mei 2024"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuantitas\t\t\t\t\t\t\t\t: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/quantityValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/leftoverTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sisa Stok\t\t\t\t\t\t\t\t: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/leftoverValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga\t\t\t\t\t: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/totalAmountValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.10000.00"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>