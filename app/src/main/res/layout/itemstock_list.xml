<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    android:padding="5dp"
    android:layout_margin="15dp"
    tools:context=".AdminStockFragment"
    android:id="@+id/cardViewStock"
    android:clickable="true">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#363636"
        android:id="@+id/mmakro"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/img_profile_test"
            android:scaleType="centerCrop"
            android:id="@+id/itemImg"
            android:layout_width="match_parent"
            android:layout_height="125dp"/>

        <TextView
            android:id="@+id/itemBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Item Barcode"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Item Name"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Item Price"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Item Stock"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>